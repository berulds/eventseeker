<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-12 col-lg-6">

      <h1>Edit your itinerary!</h1>
      <%= form_with model: @itinerary do |f| %>
        <%= f.label :name %>
        <%= f.text_field :name %>
        <%= f.label :start_time %>
        <%= f.text_field :start_time %>
        <%= f.label :end_time %>
        <%= f.text_field :end_time %>
        <%= f.submit %>
      <% end %>

      <%= link_to "Delete", root_path(@itinerary), class: "btn btn-warning", data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>

    </div>
  </div>
</div>
