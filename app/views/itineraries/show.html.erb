<div class="container-fluid mt-5">
  <div class="row">
    <div class="col-12">
      <div class="main container-fluid margin-auto mt-3 mb-3 d-flex justify-content-evenly">
          <div class="card-container ms-4 me-4">
            <div class="mt-2 d-flex justify-content-between">
              <div class="itinerary-details">
                <h2><%= @itinerary.name %></h2>
                <p><%= @itinerary.start_time.strftime('%dth %b') %> - <%= @itinerary.end_time.strftime('%dth %b') %></p>
              </div>
                <div class="itinerary-action-dropdown">
                  <button class="fa-solid fa-ellipsis-vertical dropbtn"></button>
                  <div class="dropdown-links">
                    <%= link_to "Add an Event", events_path(itinerary_id: @itinerary.id), class: "" %>
                    <%= link_to "Edit", edit_itinerary_path(@itinerary), class: "" %>
                    <%= link_to "Delete", itinerary_path(@itinerary), class: "", data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
                  </div>
                </div>
            </div>
              <% @itinerary_events.sort_by { |itinerary_event| itinerary_event.event.start_time }.group_by { |itinerary_event| itinerary_event.event.start_time.to_date }.sort.each do |date, grouped_events| %>
                <div class="date-header">
                  <h3><%= date.strftime('%dth %b') %></h3>
                </div>
                <% grouped_events.each do |event| %>
                  <% itinerary_event = event %>
                  <% if itinerary_event.itinerary_id == @itinerary.id %>
                    <div class="show-card d-flex flex-row mb-3 mt-3">
                        <% if itinerary_event.event.photo.present? %>
                          <img src=<%= cl_image_path(itinerary_event.event.photo.key, alt: "event image") %> alt="Event Image">
                        <% else %>
                          <img src="path_to_default_image" alt="Default Event Image">
                        <% end %>

                      <div class="show-card-content d-flex">
                        <div class="show-card-title"><%= itinerary_event.event.name %></div>
                        <div class="show-card-date"><%= itinerary_event.event.start_time.strftime('%dth %b') %> - <%= itinerary_event.event.end_time.strftime('%dth %b') %></div>
                      <div class="show-card-actions d-flex">
                        <% if itinerary_event.event.ticket_purchase.present? %>
                          <button type="button" class="btn btn-dark" data-bs-toggle="modal" data-bs-target="#purchase-<%= index %>">Purchase</button>

                          <div class="modal fade" id="purchase-<%= index %>" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="purchase" aria-hidden="true">
                            <div class="modal-dialog">
                              <div class="modal-content">
                                <div class="modal-header">
                                  <h2>Where would you like to purchase?</h2>
                                </div>
                                  <div class="modal-body purchase">
                                    <div class="d-flex flex-column align-items-center">
                                      <% ticket_purchase_json = JSON.parse(itinerary_event.event.ticket_purchase) %>
                                      <% ticket_purchase_json.each do |info| %>
                                        <div class="p-2">
                                          <a class="btn btn-dark" href="<%= info["link"] %>" target="_blank"><%= info["source"] %></a>
                                        </div>
                                      <% end %>
                                    </div>
                                  </div>
                                <div class="modal-footer">
                                  <button type="reset" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                </div>
                              </div>
                            </div>
                          </div>
                        <% end %>
                        </div>
                      </div>
                      <%= link_to "", itinerary_event_path(itinerary_event), class: "fa-regular fa-circle-xmark event-delete-icon", data: { turbo_method: :delete } %>
                <% end %>
                  </div>
              <% end %>
            <% end %>
          </div>
        <div class="map" style="width: 50%; height: 866px;"
          data-controller="map"
          data-map-markers-value="<%= @markers.to_json %>"
          data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
        </div>
      </div>
    </div>
  </div>
</div>
